{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notificaciones",
  "description": "Esquema para notificaciones tipo pop-up enviadas por WebSocket",
  "type": "object",
  "properties": {
    "tipo": {
      "type": "string",
      "enum": ["incidente_actualizado", "incidente_creado", "incidente_resuelto"],
      "description": "Tipo de notificación"
    },

    "titulo": {
      "type": "string",
      "description": "Título breve de la notificación",
      "maxLength": 100
    },

    "mensaje": {
      "type": "string",
      "description": "Mensaje descriptivo de la notificación",
      "maxLength": 500
    },

    "incidente_id": {
      "type": "string",
      "description": "ID del incidente relacionado"
    },

    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Momento en que se generó la notificación"
    }
  },

  "required": ["tipo", "titulo", "mensaje", "incidente_id", "timestamp"],
  "additionalProperties": false
}
