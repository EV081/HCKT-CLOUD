{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Registros",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "registro_id"
  },
  "properties": {
    "registro_id": { "type": "string" },

    "nivel": {
      "type": "string",
      "enum": ["INFO", "WARNING", "ERROR", "CRITICAL", "AUDIT"]
    },

    "tipo": {
      "type": "string",
      "enum": ["sistema", "auditoria"]
    },

    "marca_tiempo": { "type": "string", "format": "date-time" },

    "detalles_sistema": {
      "type": "object",
      "properties": {
        "mensaje": { "type": "string" },
        "servicio": { "type": "string" },
        "contexto": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["mensaje", "servicio"],
      "additionalProperties": false
    },

    "detalles_auditoria": {
      "type": "object",
      "properties": {
        "usuario_correo": { "type": "string", "format": "email" },
        "entidad": { "type": "string" },
        "entidad_id": { "type": "string" },
        "operacion": {
          "type": "string",
          "enum": ["creacion", "actualizacion", "eliminacion", "consulta"]
        },
        "valores_previos": {
          "type": "object",
          "additionalProperties": true
        },
        "valores_nuevos": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["usuario_correo", "entidad", "entidad_id", "operacion"],
      "additionalProperties": false
    }
  },

  "required": [
    "registro_id",
    "nivel",
    "tipo",
    "marca_tiempo"
  ],

  "if": {
    "properties": {
      "tipo": { "const": "auditoria" }
    },
    "required": ["tipo"]
  },
  "then": {
    "required": ["detalles_auditoria"]
  },
  "else": {
    "required": ["detalles_sistema"],
    "properties": {
      "detalles_auditoria": false
    }
  },

  "additionalProperties": false
}
