{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conexiones",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "conexion_id"
  },
  "properties": {
    "conexion_id": { "type": "string" },

    "usuario_correo": {
      "type": "string",
      "format": "email"
    },

    "rol": {
      "type": "string",
      "enum": ["estudiante", "personal_administrativo", "autoridad"]
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "expiracion_ttl": {
      "type": "number"
    }
  },

  "required": [
    "conexion_id",
    "usuario_correo",
    "created_at",
    "expiracion_ttl"
  ],

  "additionalProperties": false
}
